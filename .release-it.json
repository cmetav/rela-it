{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore(): release v${version}",
    "push": true,
    "commit": true,
    "tag": true,
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "web": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular",
        "types": [
          {
            "type": "feat",
            "section": "‚≠êÔ∏è Features"
          },
          {
            "type": "fix",
            "section": "üêû Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# CHANGELOG",
      "writerOpts": {
        "groupBy": "scope"
      },
      "commitUrlFormat": "https://github.com/cmetav/rela-it/commit/{{hash}}"
    }
  },
  "hooks": {
    "before:init": ["npm run lint"],
    "after:init": ["npm run test"],
    "after:bump": "git add -u"
  }
}
