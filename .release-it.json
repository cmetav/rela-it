{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore(): release v${version}",
    "push": true,
    "commit": true,
    "tag": true,
    "requireCommits": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular",
        "types": [
          {
            "type": "feat",
            "section": "‚≠êÔ∏è Features"
          },
          {
            "type": "fix",
            "section": "üêû Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "writerOpts": {
        "groupBy": "scope"
      }
    }
  },
  "hooks": {
    "before:init": ["git pull"],
    "after:init": ["npm run lint", "npm run test"],
    "after:bump": "npm run lint && git add -u"
  }
}
