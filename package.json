{
  "name": "release-test",
  "version": "0.2.2",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint -c eslint.config.mjs --fix",
    "pretty": "prettier --write .",
    "test": "jest",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0  -n ./changelog-option.js",
    "commitlint": "commitlint --config commitlint.config.mjs -e -V",
    "verify:commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "prepare": "husky install",
    "release:dry": "release-it --dry-run --no-npm",
    "release": "release-it -p conventionalcommits"
  },
  "keywords": [
    "release-it"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-angular": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "babel-jest": "^29.7.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "conventional-changelog-custom-config": "^0.3.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "release-it": "^17.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "lib/**/*.{js,json,ts,scss,css,vue,html}": [
      "pnpm lint"
    ],
    "./*.{js,mjs,ts,json,html}": [
      "pnpm pretty"
    ]
  },
  "dependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0"
  }
}
